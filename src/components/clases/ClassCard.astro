---
const { titulo, descripcion, imagen } = Astro.props;
---

<div class="flex flex-col items-center w-full min-w-[300px] max-h-[600px] max-w-[450px] max-h-[550px] bg-gradient-to-b from-primary-blue to-primary-violet p-1 shadow-lg rounded-2xl overflow-hidden">
    <div class="bg-theme-dark-gray w-full h-full rounded-2xl">
    <!-- Imagen del coach -->
    <img src={imagen} alt="" class="w-full h-[200px] object-cover rounded-t-2xl"/>
    
    <!-- Contenido -->
    <div class="flex flex-col w-full py-4 px-6 gap-4">
      <!-- Nombre, rol y descripciÃ³n -->
      <div class="flex flex-col gap-2">
        <h3 class="text-3xl font-bold text-primary text-primary-blue text-left">{titulo}</h3>
        <div class="text-sm text-theme-white font-sans ">{descripcion}</div>
      </div>
  
    </div>
    </div>
    
  </div>