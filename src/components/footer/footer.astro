<footer id="contacto" class=" flex flex-col md:flex-row md:justify-around">
  <div class="flex flex-col px-16 py-8 gap-6 md:w-[40%]" aria-labelledby="contact-form-title">
    <h3 id="contact-form-title" class="mt-4 mb-4 text-white font-bold">
      ENVIANOS UN <span class="text-primary-blue">MENSAJE</span>
    </h3>
  
    <div class="flex flex-col gap-2">
      <label for="nameInput" class="text-theme-white">Nombre completo</label>
      <input
        type="text"
        name="name"
        id="nameInput"
        class="bg-theme-form-black border-theme-form-gray border-1 rounded-md min-h-14 pl-2 text-white font-ari"
        autocomplete="name"
      />
    </div>
  
    <div class="flex flex-col gap-2">
      <label for="emailInput" class="text-theme-white">Email</label>
      <input
        type="email"
        name="email"
        id="emailInput"
        class="bg-theme-form-black border-theme-form-gray border-1 rounded-md min-h-14 pl-2 text-white font-ari"
        autocomplete="email"
      />
    </div>
  
    <div class="flex flex-col gap-2">
      <label for="messageInput" class="text-theme-white">Mensaje</label>
      <textarea
        name="message"
        id="messageInput"
        class="bg-theme-form-black border-theme-form-gray border-1 rounded-md min-h-14 h-48 p-2 resize-none text-white font-ari"
      ></textarea>
    </div>
  
    <input
      type="submit"
      value="ENVIAR MENSAJE"
      class="bg-primary-blue rounded-md py-4 text-theme-form-black font-bold text-xl"
      aria-label="Enviar mensaje"
    />
  </div>
  

  <div class="hidden md:block w-px bg-white my-8"></div>

  <div class="flex flex-col px-16 py-8 gap-10 md:w-[40%]" aria-labelledby="contact-info-title">
    <h3 id="contact-info-title" class="mt-4 mb-4 text-white font-bold">
      INFORMACION DE <span class="text-primary-blue">CONTACTO</span>
    </h3>
  
    <div class="flex flex-row gap-2">
      <img src="/icons/locationIcon.svg" alt="" aria-hidden="true" class="h-6 w-6 mt-1" />
      <div class="flex flex-col text-white gap-2">
        <span class="text-xl font-bold">Dirección</span>
        <span class="text-sm text-gray-300 font-ari">
          Av. de la Generalitat, 88,<br />
          43480 Vila-seca, Tarragona
        </span>
      </div>
    </div>
  
    <div class="flex flex-row gap-2">
      <img src="/icons/phoneIcon.svg" alt="" aria-hidden="true" class="h-6 w-6 mt-1" />
      <div class="flex flex-col text-white gap-2">
        <span class="text-xl font-bold">Teléfono</span>
        <a href="tel:+34618434374" class="text-sm text-gray-300 font-ari" aria-label="Llamar al +34 618 43 43 74">
          +34 618 43 43 74
        </a>
      </div>
    </div>
  
    <div class="flex flex-row gap-2">
      <img src="/icons/mailIcon.svg" alt="" aria-hidden="true" class="h-6 w-6 mt-1" />
      <div class="flex flex-col text-white gap-2">
        <span class="text-xl font-bold">Email</span>
        <a href="mailto:info@vilasecacrossfit.com" class="text-sm text-gray-300 font-ari" aria-label="Enviar correo a info@vilasecacrossfit.com">
          info@vilasecacrossfit.com
        </a>
      </div>
    </div>
  
    <div class="flex flex-row gap-2">
      <img src="/icons/clockIcon.svg" alt="" aria-hidden="true" class="h-6 w-6 mt-1" />
      <div class="flex flex-col text-white gap-2">
        <span class="text-xl font-bold">Horario</span>
        <span class="text-sm text-gray-300 font-ari">
          Lunes a Viernes 07:00 - 21:00<br />
          Sábado y domingo 09:00 - 12:00
        </span>
      </div>
    </div>
  
    <div>
      <a
        class="flex flex-row gap-2"
        href="https://www.instagram.com/vilasecacrossfit/?hl=es"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Visita nuestro Instagram @vilasecacrossfit"
      >
        <img src="/icons/instagramIcon.svg" alt="" aria-hidden="true" class="h-6 w-6 mt-1" />
        <div class="flex flex-col text-white gap-2">
          <span class="text-xl font-bold">@vilasecacrossfit</span>
        </div>
      </a>
    </div>
  </div>
  
</footer>