---
const { tituloBono, precio, caracteristicas } = Astro.props;
---
<div class="flex flex-col items-center w-full min-w-[300px] max-h-[600px] max-w-[450px] max-h-[550px] bg-white p-1 shadow-lg rounded-2xl overflow-hidden">
  <div class="w-full h-full rounded-2xl py-4 px-6 gap-4">
    <div class="flex flex-col w-full py-4">
      <h3 class="text-3xl font-bold text-black text-center">{tituloBono}</h3>
      <div class="flex flex-row justify-center items-end">
        <h4 class="text-3xl font-bold text-theme-violet-text text-center">{precio}</h4>
      </div>
    </div>

    {caracteristicas.map((caracteristica: string) => (
      <div class="flex flex-row pl-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary-blue" viewBox="0 0 24 24" fill="currentColor">
          <path d="M21 7L9 19l-5.5-5.5l1.41-1.41L9 16.17L19.59 5.59z" />
        </svg>
        <div class="font-sans pl-1 text-black">{caracteristica}</div>
      </div>
    ))}
  </div>
</div>