---
import HeaderDesktop from "@components/inicio/header/HeaderDesktop.astro"
import HeaderMobile from "@components/inicio/header/HeaderMobile.astro";
---
<div class="md:hidden sticky top-0 z-50">
  <HeaderMobile />
</div>

<section class="flex flex-col w-full md:h-screen h-[85vh] overflow-hidden">
  <div class="relative w-full h-full">
    <div class="absolute inset-0 z-0">
      <img src="/inicioBackground.webp" alt="background" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-b from-[rgba(28,28,28,0.99)] via-[rgba(28,28,28,0.95)] to-[rgba(28,28,28,0.9)]"></div>
    </div>

    <div class="hidden md:block">
      <HeaderDesktop />
    </div>

    <main class="relative flex flex-row md:h-[90vh] h-[85vh] z-10 md:pb-15">
      <div class="h-full md:w-9/10 w-full flex md:flex-row flex-col md:pl-12 pl-4">
        <div class="flex-col justify-center md:flex hidden">
          <img src="./leon.webp" alt="Lion logo" class="h-[80%] object-contain"/>
        </div>
        <div class="md:w-9/10 w-full h-full flex flex-col justify-center gap-12 md:pl-8 md:pr-4 pl-4">
          <div>
            <h1 class="md:text-6xl text-4xl font-black text-theme-white">
              <span class="bg-gradient-to-r from-primary-blue to-primary-violet bg-clip-text text-transparent">
                DESCUBRE
              </span> TU MEJOR<br>VERSIÃ“N CON
              <span class="bg-gradient-to-r from-primary-violet to-primary-blue bg-clip-text text-transparent">CROSSFIT</span>
            </h1>
          </div>
          <div>
            <p class="md:text-3xl text-1xl font-bold text-theme-white">RESERVA TU PRIMERA CLASE AHORA</p>
            <button class="bg-primary-violet px-6 py-3 rounded-sm md:mt-2 mt-6 md:text-xl font-medium hover:cursor-pointer hover:drop-shadow-[0_10px_15px_rgba(182,168,222,0.6)] transition-all duration-300">
              RESERVAR
            </button>            
          </div>
        </div>
      </div>
      <div class="hidden xl:flex flex-col justify-center w-[10%] md:pr-12 pr-8">
        <img src="./vsc.webp" alt="VSC logo" class="h-[50%] object-contain">
      </div>    
    </main>
  </div>
</section>
