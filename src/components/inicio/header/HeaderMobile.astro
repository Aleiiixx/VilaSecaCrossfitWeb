<nav class="sticky top-0 z-50 bg-theme-background-gray text-white flex items-center justify-between px-4 py-3">
  <a href="/" class="flex items-center">
    <img src="/icono.ico" class="h-12 mr-2" alt="VSC Logo" />
  </a>

  <button 
    id="menu-toggle" 
    class="focus:outline-none"
    aria-label="Open menu"
  >
    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <!-- Fullscreen Menu -->
  <div 
    id="mobile-menu" 
    class="fixed top-0 left-0 w-full h-full bg-theme-background-gray text-white flex flex-col items-center justify-center text-2xl space-y-6 transition-transform transform translate-y-[-100%]"
  >
    <button 
      id="menu-close" 
      class="absolute top-4 right-4 text-white focus:outline-none"
      aria-label="Close menu"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <a href="#">INICIO</a>
    <a href="#">HORARIOS</a>
    <a href="#">TARIFAS</a>
    <a href="#clases">CLASES</a>
    <a href="#nosotros">NOSOTROS</a>
    <a href="#">CONTACTO</a>
  </div>
</nav>

<script is:inline>
  const toggleButton = document.getElementById('menu-toggle');
  const closeButton = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  toggleButton.addEventListener('click', () => {
    mobileMenu.classList.remove('translate-y-[-100%]');
    mobileMenu.classList.add('translate-y-0');
  });

  closeButton.addEventListener('click', () => {
    mobileMenu.classList.add('translate-y-[-100%]');
    mobileMenu.classList.remove('translate-y-0');
  });
</script>
